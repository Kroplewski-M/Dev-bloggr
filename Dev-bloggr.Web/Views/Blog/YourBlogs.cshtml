@model IEnumerable<Dev_bloggr.Models.BusinessModels.Blog>    
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container"> 
    <h1>Your Blogs</h1>
    @if (@Model.Count() == 0)
    {
        <p>You haven't written any blogs!</p>
    }
    <div class="d-flex flex-wrap mt-5">
        @foreach (var blog in Model)
        {
            <div class="card rounded col-3 me-4 mb-3">
                <div class="card-header bg-dark rounded-top">
                    <p class="text-light fw-bold">@blog.Title</p>
                </div>
                <div class="card-body">
                    <p>@blog.Header</p>
                    <hr />
                    <p>by: @blog.User.FirstName @blog.User.LastName</p>
                    <p>published: @blog.CreatedAt.Date.ToString("d")</p>
                    <div class="d-flex mb-2">
                        <a href="#" class="btn btn-primary me-2 rounded">View</a>
                        <a href="#" class="btn btn-info me-2 rounded">Edit</a>
                    </div>
                        <a href="#" class="btn btn-danger rounded">Delete</a>
                </div>
            </div>
        }
    </div>
</div>